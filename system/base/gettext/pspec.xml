            <Dependency>glib2-devel</Dependency>
            <Dependency>ncurses-devel</Dependency>
            <Dependency>libunistring-devel</Dependency>
            <Dependency>libxml2-devel</Dependency>
        </BuildDependencies>
    </Source>

