            <Dependency>ncurses-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch>readline63-001.patch</Patch>
            <Patch>readline63-002.patch</Patch>
            <Patch>readline63-003.patch</Patch>
        </Patches>
    </Source>

